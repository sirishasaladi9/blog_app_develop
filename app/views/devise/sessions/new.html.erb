
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth">
      <div class="row flex-grow">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left p-5">
            <h4>Sign in to continue.</h4>
            <h6 class="font-weight-light"></h6>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'pt-3') do |f| %>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control form-control-lg', placeholder: 'Username', id:"exampleInputEmail1", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control form-control-lg', id: 'exampleInputPassword1', placeholder: 'Password', autocomplete: "current-password" %>
              </div>
              <div class="mt-3">
                <%= f.submit "Log in", class: 'btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
